<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:backgroundTint="@color/white"
    android:clickable="true"
    android:elevation="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <!--text view for our course name-->
        <TextView
            android:id="@+id/item_paxname"
            style="@style/TTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/item_next"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:text="Pax Name" />

        <!--text view for our course description-->
        <TextView
            android:id="@+id/item_paxdes"
            style="@style/TTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_paxname"
            android:layout_toLeftOf="@id/item_next"
            android:padding="@dimen/_5sdp"
            android:text="Pax details"
            android:textSize="@dimen/_8sdp"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_next"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:tint="@color/black"
            android:src="@drawable/ic_baseline_navigate_next_24" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
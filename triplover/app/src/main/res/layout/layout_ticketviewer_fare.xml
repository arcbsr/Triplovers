<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_1sdp"
    android:layout_marginBottom="@dimen/_1sdp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_tct_pax"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".7"
        android:background="@color/semi_trans_80"
        android:gravity="center_vertical"
        android:padding="@dimen/_3sdp"
        android:text="Pax Type"
        android:maxLines="1"
        android:textColor="@color/black_main"
        android:textSize="@dimen/_8sdp" />

    <TextView
        android:maxLines="1"
        android:id="@+id/item_tct_base"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_weight=".8"
        android:background="@color/semi_trans_80"
        android:gravity="center"
        android:padding="@dimen/_3sdp"
        android:text="Base Fare"
        android:textColor="@color/black_main"
        android:textSize="@dimen/_8sdp" />

    <TextView
        android:maxLines="1"
        android:id="@+id/item_tct_tax"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_weight=".5"
        android:background="@color/semi_trans_80"
        android:gravity="right"
        android:padding="@dimen/_3sdp"
        android:text="Tax"
        android:textColor="@color/black_main"
        android:textSize="@dimen/_8sdp" />

    <TextView
        android:maxLines="1"
        android:id="@+id/item_tct_fees"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_weight=".5"
        android:background="@color/semi_trans_80"
        android:gravity="right"
        android:padding="@dimen/_3sdp"
        android:text="Fees"
        android:textColor="@color/black_main"
        android:textSize="@dimen/_8sdp" />

    <TextView
        android:maxLines="1"
        android:id="@+id/item_tct_person"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_weight=".5"
        android:background="@color/semi_trans_80"
        android:gravity="right"
        android:padding="@dimen/_3sdp"
        android:text="Person"
        android:textColor="@color/black_main"
        android:textSize="@dimen/_8sdp" />

    <TextView
        android:maxLines="1"
        android:id="@+id/item_tct_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_weight="1"
        android:background="@color/semi_trans_80"
        android:gravity="right"
        android:padding="@dimen/_3sdp"
        android:text="Total"
        android:textColor="@color/black_main"
        android:textSize="@dimen/_8sdp" />
</LinearLayout>